{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "pretty": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "apiframework/*": ["node_modules/apiframework/dist/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
